#!/usr/bin/env bash
# Creates a PID file and handles signals

PID_FILE="/var/run/myscript.pid"

# Do not start if already running
if [ -e "$PID_FILE" ]; then
    exit 0
fi

# Ignore SIGHUP
trap '' SIGHUP

# Create PID file
echo $$ > "$PID_FILE"

term_handler() {
    echo "I hate the kill command"
}

int_handler() {
    echo "Y U no love me?!"
}

quit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT

while true
do
    echo "To infinity and beyond"
    sleep 2
done
