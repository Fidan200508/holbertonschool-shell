#!/usr/bin/env bash
# Displays a message indefinitely and handles signals with a PID file

PID_FILE="/var/run/myscript.pid"

# Write PID
echo $$ > "$PID_FILE"

# SIGINT handler (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGTERM handler
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGQUIT handler
sigquit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap sigint_handler SIGINT
trap sigterm_handler SIGTERM
trap sigquit_handler SIGQUIT

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
