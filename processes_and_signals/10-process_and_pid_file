#!/usr/bin/env bash
# Creates a PID file and handles signals

PID_FILE="/var/run/myscript.pid"

# Ensure directory exists (fails silently if not permitted)
mkdir -p /var/run 2>/dev/null

# Write PID file (fallback-safe)
echo $$ > "$PID_FILE" 2>/dev/null

term_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

int_handler() {
    echo "Y U no love me?!"
}

quit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT

while true
do
    echo "To infinity and beyond"
    sleep 2
done
